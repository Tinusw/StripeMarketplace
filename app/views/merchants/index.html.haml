.col-xs-12.col-sm-12.col-md-12.col-lg-12
  .container.text-center
    %h1 Merchants
  - @merchants.each do |merchant|
    .col-xs-12.col-sm-12.col-md-6.col-lg-3
      .panel.panel-default
        .panel-header.text-center
          %h3
            = merchant.title
          %p
            = merchant.description
        .panel-body
          - if current_user == merchant.owner
            .row
              .col-lg-3
                .btn.btn-md.btn-info.btn-options
                  = link_to 'Show', merchant
              .col-lg-3
                .btn.btn-md.btn-warning.btn-options
                  = link_to 'Edit', edit_merchant_path(merchant)
              .col-lg-3
                .btn.btn-md.btn-danger.btn-options
                  = link_to 'Destroy', merchant, method: :delete, data: { confirm: 'Are you sure?' }
          - else
            .row
              .col-xs-12.col-sm-12.col-md-12.col-lg-12.text-center
                .btn.btn-md.btn-primary.btn-options
                  = link_to 'Show', merchant

  %br
  .col-xs-12.col-sm-12.col-md-12.col-lg-12.text-center
    .panel.panel-default
    .btn.btn-md.btn-info
      = link_to 'New Merchant', new_user_merchant_path(@user)
